<Window x:Class="BfK_S_ApiProjekt.ViewViewModels.EditFlashcardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BfK_S_ApiProjekt.ViewViewModels"
        d:DataContext="{d:DesignInstance Type=local:EditFlashcardViewModel}"
        mc:Ignorable="d"
        WindowStyle="None"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="White"
        ResizeMode="NoResize">
    <Window.Resources>
        <ResourceDictionary>
            <Style TargetType="Button"
                   BasedOn="{StaticResource DefaultButtonStyle}">
                <Setter Property="Background"
                        Value="Transparent" />
                <Setter Property="Margin"
                        Value="10" />
                <Setter Property="BorderBrush"
                        Value="White" />
                <Setter Property="Padding"
                        Value="3" />
            </Style>

            <Style TargetType="Button" x:Key="DefaultButton"
                   BasedOn="{StaticResource DefaultButtonStyle}" />
        </ResourceDictionary>
    </Window.Resources>

    <StackPanel Background="#555555">
        <DockPanel>
            <TextBlock Text="Edit Flashcard"
                       FontSize="20"
                       Margin="10"
                       Foreground="White" />
            <Button Content="X"
                    Background="Transparent"
                    HorizontalAlignment="Right"
                    Command="{Binding CloseCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" />
        </DockPanel>

        <StackPanel Margin="10,0"
                    Background="White"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch">
            <StackPanel Orientation="Horizontal"
                        Margin="10,10,10,0">
                <TextBlock Text="Theme"
                           VerticalAlignment="Center" />
                <Rectangle Width="10"
                           Height="1" />
                <ComboBox VerticalAlignment="Center"
                          MinWidth="300"
                          ItemsSource="{Binding TempThemes}"
                          DisplayMemberPath="Name"
                          SelectedItem="{Binding TempSelectedTheme}" />
                <Rectangle Width="10"
                           Height="1" />
                <Button Content="Create new Theme"
                        Style="{StaticResource DefaultButton}"
                        Command="{Binding CreateThemeCommand}" />
            </StackPanel>
            <Grid Margin="10"
                  Grid.IsSharedSizeScope="True"
                  VerticalAlignment="Stretch"
                  HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition SharedSizeGroup="Width"
                                      Width="300" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition SharedSizeGroup="Width" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="auto"
                                   MinHeight="200" />
                </Grid.RowDefinitions>

                <TextBlock Text="Vorderseite" />

                <Border BorderBrush="Black"
                        BorderThickness="1"
                        Grid.Row="2"
                        VerticalAlignment="Stretch">
                    <TextBox VerticalAlignment="Stretch"
                             Text="{Binding TempFrontText}"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Visible" />
                </Border>

                <TextBlock Text="Rückseite"
                           Grid.Column="2" />

                <Border BorderBrush="Black"
                        BorderThickness="1"
                        Grid.Column="2"
                        Grid.Row="2"
                        VerticalAlignment="Stretch">
                    <TextBox VerticalAlignment="Stretch"
                             TextWrapping="Wrap"
                             Text="{Binding TempBackText}"
                             VerticalScrollBarVisibility="Visible" />
                </Border>
            </Grid>
        </StackPanel>

        <DockPanel>
            <Button Content="Reset"
                    MinWidth="70"
                    Command="{Binding ResetCommand}" />
            <Button Content="Save"
                    MinWidth="70"
                    Command="{Binding SaveCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    HorizontalAlignment="Right" />
        </DockPanel>


    </StackPanel>
</Window>
