<Window x:Class="BfK_S_ApiProjekt.ViewViewModels.CreateFlashcard.CreateThemeView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BfK_S_ApiProjekt.ViewViewModels.CreateFlashcard"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=local:CreateThemeViewModel}"
        WindowStyle="None"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="White"
        ResizeMode="NoResize">
    <Window.Resources>
        <ResourceDictionary>
            <Style TargetType="Button"
                   BasedOn="{StaticResource DefaultButtonStyle}">
                <Setter Property="Background"
                        Value="Transparent" />
                <Setter Property="Margin"
                        Value="10" />
                <Setter Property="BorderBrush"
                        Value="White" />
                <Setter Property="Padding"
                        Value="3" />
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <StackPanel Background="#555555">
        <DockPanel>
            <TextBlock Text="Create Theme"
                       FontSize="20"
                       Margin="10"
                       Foreground="White" />
            <Button Content="X"
                    Background="Transparent"
                    HorizontalAlignment="Right"
                    Command="{Binding CloseCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" />
        </DockPanel>

        <StackPanel Margin="10,0"
                    Background="White"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch">
            <TextBox Text="{Binding TempName}"
                     HorizontalAlignment="Stretch"
                     Width="300"
                     TextWrapping="Wrap" />
        </StackPanel>

        <DockPanel>
            <Button Content="Create"
                    MinWidth="70"
                    Command="{Binding CreateThemeCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    HorizontalAlignment="Right" />
        </DockPanel>


    </StackPanel>
</Window>
